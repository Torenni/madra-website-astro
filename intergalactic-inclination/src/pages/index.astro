---
import Layout from "../layouts/Layout.astro";

const base = (import.meta.env.BASE_URL || "/").replace(/\/$/, "");
const withBase = (path) => `${base}/${path}`.replace(/\/+/g, "/");

// HERO image
const coverImg = withBase("images/covers/cover_page.webp");

// Recent section cover image (you said it is in: public/images/report_covers/)
const mruCover = withBase("images/report_covers/mru_logo.jpg");

// Report file (you said it is in: public/key-documents/)
const mruReport = withBase("key-documents/mru_report.md");
---

<Layout title="MADRA" fullBleed>
  <!-- =========================================
       HERO (KEEP YOUR EXISTING FULL-BLEED HERO)
       IMPORTANT: make sure it ends with </section>
  ========================================== -->

  <!-- ✅ PASTE YOUR EXISTING HERO SECTION HERE EXACTLY AS-IS -->
  <!-- It should be the one with:
       class="relative w-screen max-w-none ... -ml-[50vw] -mr-[50vw]"
  -->

  <!-- =========================
       RECENT (IEG-style strip)
  ========================== -->
  <section class="border-t border-slate-200 bg-white">
    <div class="mx-auto max-w-6xl px-6 py-12">
      <!-- Header + tabs -->
      <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
        <div class="flex items-center gap-3">
          <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-900 text-white">
            ▶
          </span>
          <h2 class="text-2xl font-bold tracking-tight">Recent</h2>
        </div>

        <div class="flex flex-wrap gap-2">
          <a
            href={withBase("blog/")}
            class="rounded-md border border-slate-200 bg-white px-3 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50"
          >
            Blog
          </a>
          <a
            href={withBase("reports/key-documents/")}
            class="rounded-md border border-slate-200 bg-white px-3 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50"
          >
            Key Documents
          </a>
          <a
            href={withBase("reports/technical-papers/")}
            class="rounded-md border border-slate-200 bg-white px-3 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50"
          >
            Technical Papers
          </a>
          <a
            href={withBase("insights/")}
            class="rounded-md border border-slate-200 bg-white px-3 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50"
          >
            Insights
          </a>
        </div>
      </div>

      <!-- Cards row: 3 reports + View All -->
      <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
        <!-- Report card 1 -->
        <a
          href={mruReport}
          class="group overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md"
          target="_blank"
          rel="noreferrer"
        >
          <div class="aspect-[16/10] overflow-hidden bg-slate-100">
            <img
              src={mruCover}
              alt="Does Aid Foster Growth? cover"
              class="h-full w-full object-cover transition duration-300 group-hover:scale-[1.03]"
              loading="lazy"
              decoding="async"
            />
          </div>

          <div class="p-4">
            <div class="flex items-center gap-2 text-xs font-semibold uppercase tracking-wide text-slate-500">
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-1 text-slate-700">
                Key Document
              </span>
            </div>

            <h3 class="mt-3 line-clamp-2 text-sm font-bold text-slate-900">
              Does Aid Foster Growth? Empirical Evidence from the Mano River Union Region
            </h3>

            <div class="mt-3 inline-flex items-center gap-2 text-sm font-semibold text-slate-900">
              Read Report
              <span class="transition group-hover:translate-x-0.5">→</span>
            </div>
          </div>
        </a>

        <!-- Placeholder card 2 -->
        <div class="rounded-xl border border-dashed border-slate-300 bg-white p-6 text-sm text-slate-600">
          <div class="font-semibold text-slate-900">Coming soon</div>
          <div class="mt-2">Add your next Key Document here.</div>
        </div>

        <!-- Placeholder card 3 -->
        <div class="rounded-xl border border-dashed border-slate-300 bg-white p-6 text-sm text-slate-600">
          <div class="font-semibold text-slate-900">Coming soon</div>
          <div class="mt-2">Add your next Technical Paper here.</div>
        </div>

        <!-- View All tile -->
        <a
          href={withBase("reports/")}
          class="group flex items-center justify-center rounded-xl bg-sky-600 p-6 text-center font-bold text-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md"
        >
          <div>
            <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-white/15 text-2xl">
              →
            </div>
            <div class="mt-3">View All</div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- ✅ KEEP YOUR EXISTING <style> ... </style> BELOW (from your HERO file) -->
</Layout>

