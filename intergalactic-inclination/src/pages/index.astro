---
import Layout from "../layouts/Layout.astro";

const base = (import.meta.env.BASE_URL || "/").replace(/\/$/, "");
const withBase = (path) => `${base}/${path}`.replace(/\/+/g, "/");

// âœ… Your image in: /public/images/covers/cover_page.png
const coverImg = withBase("images/covers/cover_page.png");
---

<Layout>
  <!-- Full-width hero like IEG -->
  <section class="w-full">
    <div class="mx-auto max-w-6xl">
      <div
        class="
          grid overflow-hidden
          rounded-2xl border border-slate-200
          md:grid-cols-2
        "
      >
        <!-- LEFT: Blue MADRA panel -->
        <div
          class="
            bg-slate-900 text-white
            px-8 py-14
            md:px-12 md:py-20
            md:border-r md:border-white/15
          "
        >
          <h1 class="text-4xl font-bold tracking-tight md:text-5xl">MADRA</h1>

          <p class="mt-5 max-w-xl text-base text-white/80 md:text-lg">
            A professional services firm providing strategy, project management,
            monitoring & evaluation, and data solutions.
          </p>

          <div class="mt-8 flex flex-wrap gap-3">
            <a
              class="rounded-md bg-white px-5 py-3 text-sm font-semibold text-slate-900 hover:bg-white/90"
              href={withBase("reports/")}
            >
              View Reports
            </a>

            <a
              class="rounded-md border border-white/35 px-5 py-3 text-sm font-semibold text-white hover:bg-white/10"
              href={withBase("about/")}
            >
              About MADRA
            </a>
          </div>
        </div>

        <!-- RIGHT: Image with dark overlay (IEG feel) -->
        <div class="relative min-h-[360px] md:min-h-[520px]">
          <img
            src={coverImg}
            alt="MADRA cover image"
            class="h-full w-full object-cover"
            loading="eager"
            decoding="async"
          />

          <!-- Dark overlay -->
          <div class="absolute inset-0 bg-slate-900/45"></div>

          <!-- Optional subtle vignette (nice touch) -->
          <div class="pointer-events-none absolute inset-0 shadow-[inset_0_0_120px_rgba(0,0,0,0.35)]"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>

