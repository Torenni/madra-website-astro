---
import Layout from "../layouts/Layout.astro";

const reports = [
  { title: "Key Documents", href: "/reports/key-documents" },
  { title: "Technical Papers", href: "/reports/technical-papers" },
];
---

<Layout title="Reports | MADRA">
  <section class="mx-auto max-w-6xl px-6 py-12">
    <h1 class="text-3xl font-bold tracking-tight">Reports</h1>

    <p class="mt-4 max-w-3xl text-slate-700">
      Browse our publications and technical outputs.
    </p>

    <ul class="mt-8 space-y-3">
      {reports.map((r) => (
        <li>
          <a
            class="font-medium text-blue-700 hover:underline"
            href={r.href}
          >
            {r.title}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>


