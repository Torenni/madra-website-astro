---
import Layout from "../layouts/Layout.astro";

const reports = [
  { title: "Key Documents", href: "/reports/key-documents" },
  { title: "Technical Papers", href: "/reports/technical-papers" },
];
---

<Layout title="Reports | MADRA">
  <h1 class="text-3xl font-bold">Reports</h1>
  <p class="mt-4 text-slate-700 max-w-3xl">
    Browse our publications and technical outputs.
  </p>

  <ul class="mt-8 space-y-3">
    {reports.map((r) => (
      <li>
        <a class="text-blue-700 hover:underline font-medium" href={r.href}>
          {r.title}
        </a>
      </li>
    ))}
  </ul>
</Layout>
