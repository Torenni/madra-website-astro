---
const base = (import.meta.env.BASE_URL || "/").replace(/\/$/, "");
const withBase = (path) => `${base}/${path}`.replace(/\/+/g, "/");

const nav = [
  { label: "About", href: "about/" },
  { label: "Reports", href: "reports/" },
  { label: "Insights", href: "insights/" },
  { label: "Blog", href: "blog/" },
  { label: "Contact", href: "contact/" },
];

const home = base === "" ? "/" : `${base}/`;
const logoSrc = withBase("images/logo/madra_logo.svg");
---

<header class="border-b bg-white">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
    <a href={home} class="flex items-center gap-4">
      <img
        src={logoSrc}
        alt="MADRA logo"
        width="44"
        height="44"
        style="height:44px;width:auto;max-width:44px;"
        class="h-10 w-auto md:h-12"
        loading="eager"
        decoding="async"
      />
      <div class="leading-tight">
        <div class="text-base font-semibold text-slate-900 md:text-lg">MADRA</div>
        <div class="text-sm text-slate-500 md:text-base">
          Managing for Development Results Associates
        </div>
      </div>
    </a>

    <nav class="hidden gap-8 md:flex">
      {nav.map((item) => (
        <a
          href={withBase(item.href)}
          class="text-base font-semibold tracking-wide text-slate-700 hover:text-slate-900"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <a
      href={withBase("contact/")}
      class="hidden rounded-md bg-slate-900 px-5 py-2.5 text-base font-semibold text-white hover:bg-slate-800 md:inline-flex"
    >
      Contact
    </a>
  </div>
</header>
