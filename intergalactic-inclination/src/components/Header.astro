---
const nav = [
  { label: "About", href: "/about" },
  { label: "Reports", href: "/reports" },
  { label: "Insights", href: "/insights" },
  { label: "Blog", href: "/blog" },
  { label: "Contact", href: "/contact" },
];
---

<header class="border-b bg-white">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-5">
    
    <!-- Brand -->
    <a href="/" class="flex items-center gap-4">
      
      <!-- Larger logo (IEG-style) -->
      <img
        src="/images/logo/madra_logo.svg"
        alt="MADRA logo"
        class="h-14 w-auto"
      />

      <div class="leading-tight">
        <div class="text-base font-semibold text-slate-900">MADRA</div>
        <div class="text-xs text-slate-500">
          Managing for Development Results Associates
        </div>
      </div>
    </a>

    <!-- Nav -->
    <nav class="hidden gap-6 md:flex">
      {nav.map((item) => (
        <a
          href={item.href}
          class="text-sm font-medium text-slate-700 hover:text-slate-900"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- CTA -->
    <a
      href="/contact"
      class="hidden rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800 md:inline-flex"
    >
      Get in touch
    </a>
  </div>
</header>

